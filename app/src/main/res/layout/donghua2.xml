<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/caidan"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/leftmenubtn"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点"/>
        <TextView
            android:id="@+id/rightmenubtn"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/caidan"
        android:id="@+id/donghua1"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imganim"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/donghua1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ceshi1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#fff333"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试1"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ceshi2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#222fff"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试2"/>
        <TextView
            android:background="#000000"
            android:id="@+id/ceshi3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="测试3"/>
    </LinearLayout>
</RelativeLayout>